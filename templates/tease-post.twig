{% extends "tease.twig" %}

{% block content %}

		<div class="space-y-5">
	
			{% if post.thumbnail.src %}
				<div class="overflow-hidden">
					<a class="block hover:scale-105 transform transition duration-500 ease-in-out" href="{{post.link}}">
						<img src="{{ post.thumbnail.src|resize(620, 350) }}" />
					</a>
				</div>
			{% endif %}

			<h2 class="font-display text-2xl">
				<a href="{{post.link}}">
					{{post.title}}
				</a>
			</h2>
	
			<p class="font-light">{{post.preview.length(25).read_more(false)}}</p>
	
			<div>
				<a class="btn" href="{{post.link}}">Read Blog</a>
			</div>

		</div>

{% endblock %}