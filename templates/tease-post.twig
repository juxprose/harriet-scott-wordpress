{% extends "tease.twig" %}

{% block content %}

	<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
		
		{% if post.thumbnail.src %}
			<div class="flex-shrink-0 overflow-hidden">
				<a class="block hover:scale-105 transform transition duration-500 ease-in-out" href="{{post.link}}">
					<img class="hover:scale-105 transform transition duration-500 ease-in-out h-48 w-full object-cover" src="{{ post.thumbnail.src|resize(620, 350) }}" alt="{{post.title}}">
				</a>
			</div>
		{% endif %}

		<div class="flex-1 bg-white p-6 flex flex-col justify-between">
			<div class="flex-1">
				<p class="text-sm text-hs-dust-pink">
					{{ post.post_date|date('F j, Y') }}
				</p>
				<a href="{{post.link}}" class="block mt-2">
					<p class="text-2xl font-display tracking-wider">
						{{post.title}}
					</p>
					<p class="mt-3">
						{{post.preview.length(25).read_more(false)}}
					</p>
				</a>
			</div>
			
		</div>
	</div>

{% endblock %}