{% if menu %}
	<ul class="flex">
	{% for item in items %}
		<li class="text-white text-sm px-2 {{ item.classes | join(' ') }}">
			<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			{% include "menu.twig" with {'items': item.children} %}
		</li>
	{% endfor %}
	</ul>
{% endif %}
