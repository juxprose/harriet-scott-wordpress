{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link sr-only" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header">
			{% block header %}
				<div class="py-3 bg-black shadow-lg">
					<div class="panel flex justify-between">
						<nav id="nav-social" class="nav-social" role="navigation">
							<ul>
								<li>
									<a href="#">Instagram</a>
									<a href="#">{% include 'partial/icon-twitter.twig' %}</a>
								</li>
							</ul>
						</nav><!-- #nav -->
						<h1 class="uppercase text-center text-white font-light tracking-widest" role="banner">
							<a href="{{site.url}}" rel="home">{{site.name}}</a>
						</h1>
						<nav id="nav-main" class="nav-main" role="navigation">
							{% include "menu.twig" with {'items': menu.get_items} %}
						</nav><!-- #nav -->
					</div>
				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
