{% extends "base.twig" %}

{% block content %}

	<div class="from-gray-200 bg-gradient-to-b pt-20 mb-10">
	  <div class="panel max-w-screen-lg mx-auto">
			<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
    		<h1 class="font-display text-4xl sm:text-6xl mb-10">{{ post.title }}</h1>
				<div class="prose font-light mt-4">
					{{post.content}}
				</div>
			</article>
	  </div>
	</div>

{% endblock %}