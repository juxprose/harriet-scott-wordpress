  "bugs": {
    "url": "https://github.com/juxprose/harriet-scott-wordpress/issues"
  },
  "homepage": "https://github.com/juxprose/harriet-scott-wordpress#readme",
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.3",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
